<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/minCard"
        android:layout_height="200dp"
        android:layout_width="190dp">

        <ImageView
            android:id="@+id/minPoster"
            android:layout_width="190dp"
            android:layout_height="100dp"
            tools:src="@drawable/lock_stock"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/minTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Title"
            android:textColor="@color/primary_text"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/minPoster"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/minPoster" />

        <TextView
            android:id="@+id/minYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Year"
            android:textColor="@color/primary_text"
            android:textSize="12sp"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/minTitle"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/minTitle" />

        <ImageButton
            android:id="@+id/minRemind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/remind_item_color_state"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/minFav"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/minYear" />

        <ImageButton
            android:id="@+id/minFav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_test_24dp"
            tools:src="@drawable/ic_favorite_border_black_24px"
            app:layout_constraintLeft_toRightOf="@+id/minRemind"
            app:layout_constraintRight_toLeftOf="@+id/minList"
            app:layout_constraintTop_toTopOf="@+id/minRemind" />

        <ImageButton
            android:id="@+id/minList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_test_24dp"
            tools:src="@drawable/ic_playlist_add_black_24px"
            app:layout_constraintLeft_toRightOf="@+id/minFav"
            app:layout_constraintRight_toLeftOf="@+id/minDetails"
            app:layout_constraintTop_toTopOf="@+id/minFav" />

        <ImageButton
            android:id="@+id/minDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_subject_black_24px"
            app:layout_constraintTop_toTopOf="@+id/minList"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/minList" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>