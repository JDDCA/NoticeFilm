<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/minCard"
    android:layout_marginTop="8dp"
    android:layout_marginStart="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginEnd="4dp"
    android:layout_height="160dp"
    android:layout_width="160dp">

    <android.support.constraint.ConstraintLayout
        android:layout_height="160dp"
        android:layout_width="160dp">

        <ImageView
            android:id="@+id/minPoster"
            android:layout_height="100dp"
            android:layout_width="160dp"
            tools:src="@drawable/lock_stock"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            tools:layout_editor_absoluteX="4dp" />

        <TextView
            android:id="@+id/minTitle"
            android:layout_width="150dp"
            android:layout_height="16dp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/primary_text"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@+id/minPoster"
            app:layout_constraintTop_toBottomOf="@+id/minPoster"
            tools:text="Title"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/minYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Year"
            android:textColor="@color/primary_text"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/minTitle"
            app:layout_constraintLeft_toLeftOf="@+id/minTitle" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>