<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gmail.nf.project.jddca.noticefilm.view.fragment.generate.GenerateFragmentImpl">

    <include
        layout="@layout/progress_bar"
        android:visibility="gone"
        android:id="@+id/includeProgressBar"
        android:layout_height="match_parent"
        android:layout_width="match_parent" />

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:visibility="visible"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.gmail.nf.project.jddca.noticefilm.view.fragment.generate.GenerateFragmentImpl"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight = "0.7"
        android:text="@string/random"
        app:ms_text_color="@color/primary_text"
        app:ms_arrow_tint="@color/primary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/generate_btn"
        app:layout_constraintRight_toLeftOf="@+id/generate_btn"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="0dp" />

    <include
        layout="@layout/movie_short_info_card_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/include"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/generate_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight = "0.3"
        style="Base.Widget.AppCompat.Button.Colored"
        android:background="@color/accent"
        android:text="@string/advice"
        android:textColor="@color/primary_text"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/spinner"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"/>

</android.support.constraint.ConstraintLayout>
</FrameLayout>
